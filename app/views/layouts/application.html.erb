<!DOCTYPE html>
<html>
<head>
  <title>Yaps</title>
  <!-- set the viewport -->
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="sign_in_status">
  <% if current_user %>
	  <p id="user_name" class="navbar-text navbar-right">Signed in as <%= current_user.name %> <%= link_to "Sign Out", logout_path %> </p>
	  <script>
	  	currentUser = <%= raw current_user.to_json %>;
	  </script>
  <% end %>
</div>
<%= yield %>

</body>
</html>
